#include<stdio.h>
int main()
{
float num1;
float num2;
float result;


char selection;
printf("Enter Expression:\n");
scanf("%f%c%f",&num1,&selection,&num2);


switch (selection){
case '+':
{
result=num1+num2;
printf("%0.2f+%0.2f=%0.2f",num1,num2,result);
printf("\n");
break;
}
case '/':
{
result=num1/num2;
printf("%0.2f/%0.2f=%0.2f",num1,num2,result);
printf("\n");
break;
}
case '*':
{
result=num1*num2;
printf("%0.2f*%0.2f=%0.2f",num1,num2,result);
printf("\n");
break;
}
case '-':
{
result=num1-num2;
printf("%0.2f-%0.2f=%0.2f",num1,num2,result);
printf("\n");
break;
}
default:
{
	printf("\n i cannot perform this operation");
}
}
return 0;
}
