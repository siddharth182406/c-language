#include<stdio.h>
#include<math.h>
int main()
{
double a,b,c,r1,r2;
//%lf
printf("ax^2+bx+c=0");
printf("\n enter value  of coefficient in the above format");
printf("\n enter value of a:  ");
scanf("%lf",&a);
printf("\n enter value of b:  ");
scanf("%lf",&b);
printf("\n enter value of c:  ");
scanf("%lf",&c);

r1=(-b+sqrt(b*b-4*a*c))/(2*a);
r2=(-b-sqrt(b*b-4*a*c))/(2*a);

printf("Roots of quadratic equation \n %lfx^2+%lfx+%lf=0",a,b,c);
printf("\n r1=%lf",r1);
printf("\n r2=%lf",r2);

return 0;
}
